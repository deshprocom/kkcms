%div
  %table.index_table
    %thead
      %tr
        %th 头像
        %th 昵称
        %th 关注时间
    %tbody
      - @followers.each do |user|
        %tr
          %td= avatar(user.avatar_path)
          %td= user.nick_name
          %td= resource.created_at.strftime("%F %T")
  %div.index_foot
    = paginate(@followers, remote: true)
