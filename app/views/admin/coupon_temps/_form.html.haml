= semantic_form_for [:admin, resource] do |f|
  = f.inputs do
    = f.input :name
    = f.input :short_desc
    = f.input :coupon_type, as: :select, collection: AdminTrans::COUPON_TYPE, include_blank: false
    = f.input :discount_type, as: :select, collection: AdminTrans::DISCOUNT_TYPE, include_blank: false
    = f.input :reduce_price
    = f.input :limit_price, hint: '类型为满减时候生效，满多少才有优惠'
    = f.input :discount, hint: '类型为折扣的时候生效，0.8->8折, 0.95->95折'
    = f.input :new_user
    = f.input :integral_on
    = f.input :integrals
    ~ f.text_area :description
    = f.actions

:javascript
  $(function() {
    dpEditor.call($('#coupon_temp_description'), $('form.coupon_temp'));
  });